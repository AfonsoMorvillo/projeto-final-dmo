<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="colorAccent">#fff</item>
        <item name="android:textColorHint">#FFF</item>
    </style>

    <style name="DropDownMenuStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="colorAccent">#fff</item>
        <item name="android:textColorHint">#FFF</item>
    </style>

    <style name="CustomAlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:background">@color/dark_gray</item>
        <!-- Cor do texto do título -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Neutral</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">

        <item name="android:textColor">@color/colorPrimary</item>

    </style>

    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">

        <item name="android:textColor">@color/colorPrimary</item>

    </style>


    <!-- Estilo personalizado para o FloatingActionButton -->
    <style name="CustomFAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="fabSize">normal</item>
        <item name="borderWidth">0dp</item> <!-- Remove a borda se necessário -->
    </style>

    <!-- cor do datepicker-->
    <style name="CustomDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Personalize a aparência do dialog -->
        <item name="colorAccent">@color/colorPrimary</item> <!-- Cor de bolinha -->
        <item name="android:background">@color/dark_gray</item> <!-- Cor de fundo -->
        <item name="android:textColorPrimary">#FFFFFF</item> <!-- Cor do texto -->
        <item name="android:textColorSecondary">#FFFFFF</item>
    </style>





</resources>